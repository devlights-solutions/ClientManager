@model decimal?
@{

    ViewBag.Decimals = String.IsNullOrEmpty(ViewBag.Decimals) ? "2" : ViewBag.Decimals;
    ViewBag.Min = String.IsNullOrEmpty(ViewBag.Min) ? null : ViewBag.Min;
    ViewBag.Max = String.IsNullOrEmpty(ViewBag.Max) ? null : ViewBag.Max;

    var format = "N" + (string)ViewBag.Decimals;
    var value = !Model.HasValue ? string.Empty : Model.GetValueOrDefault().ToString(format);
}

@Html.TextBox("",
        value,
        new
        {
            @class = "form-control text-right",
            ng_model = Html.AngularBindingForModel(),
            ng_change = ViewBag.NgChange,
            ng_disabled = ViewBag.NgDisabled,
            ng_required = ViewBag.NgRequired,
            decimals = ViewBag.Decimals,
            decimal_min = ViewBag.Min,
            decimal_max = ViewBag.Max,
            formatting = "false",
            decimals_only = ""
        })
