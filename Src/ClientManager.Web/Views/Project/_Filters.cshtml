@model ProjectListFiltersModel

<div id="filter-container" class="collapse">
    <form role="form" form-parse ng-submit="vm.refresh()">
        <div class="row">
            <div class="col-sm-4">
                @Html.AngularEditorFor(model => model.Criteria, "vm.filter")
            </div>           
            <div class="col-md-4 form-group">
                @Html.AngularEditorFor(model => model.ClientId, new { Prefix = "vm.filter", NgSelect = "vm.actualizarCliente()", NgUiSelectOptions = "vm.projectOptions" })
            </div>           
            <div class="col-sm-4">
                <button type="submit" class="btn btn-default pull-left"><span class="glyphicon glyphicon-search"></span></button>
            </div>
        </div>
    </form>
</div>